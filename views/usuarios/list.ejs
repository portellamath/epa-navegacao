<%- include('partials/head') %>
<%- include('partials/navbar') %>
<main class="container my-4">
  <h1>Usuários</h1>
  <div class="mb-3">
    <a href="/usuarios/add" class="btn btn-primary"><i class="bi bi-person-plus"></i> Adicionar Usuário</a>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Telefone</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% usuarios.forEach(user => { %>
        <tr>
          <td><a href="/usuarios/<%= user.id %>"><%= user.nome %></a></td>
          <td><%= user.email %></td>
          <td><%= user.telefone %></td>
          <td>
            <a href="/usuarios/<%= user.id %>/edit" class="me-2" title="Editar"><i class="bi bi-pencil"></i></a>
            <form action="/usuarios/<%= user.id %>/delete" method="POST" style="display:inline" onsubmit="return confirm('Excluir usuário?')">
              <button class="btn btn-link p-0" title="Excluir"><i class="bi bi-trash"></i></button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>
<%- include('partials/footer') %>
